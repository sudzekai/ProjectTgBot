<UserControl x:Class="ProjectTgBot.UI_Elements.FormInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectTgBot.UI_Elements"
             mc:Ignorable="d">
    <Border Background="#121212" Margin="5" CornerRadius="15" Height="auto" Padding="20 20 10 20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition MinWidth="410"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0" Grid.Column="0">
                    <TextBlock Text="Название формы:" Height="20"/>
                    <TextBox Text="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
    Name="CommandTextBox" Width="200" Height="30" Style="{StaticResource DarkTextBox}" Margin="0,0,0,0" HorizontalAlignment="Left" ToolTip="Команда или текст, при написании которого, выполнятся условия ниже"/>
                    <TextBlock Text="Шаги" FontWeight="Bold" Margin="0 20 0 0" Height="20"/>
                    <Button Name="AddNewStepButton"
BorderThickness="0"
Content="Добавить шаг" 
Background="#2b2b2b" 
Width="200" Height="30" Margin="0"
HorizontalAlignment="Left" Click="AddNewStepButton_Click" Padding="3"/>

                </StackPanel>

                <StackPanel Grid.Column="1">
                    
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Сообщение бота:" Height="20" />
                    <TextBox Text="{Binding BotAnswer, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                 Name="MessageTextBox" 
                 HorizontalAlignment="Stretch" Height="100"
                 Style="{StaticResource DarkTextBox}" 
                 Margin="0 0 10 0"
                 ToolTip="Стартовое сообщение, отправляемое ботом, может использовать MarkdownV2 для форматирования текста. Например, *текст* будет жирным, а _текст_ — курсивом. Некоторые символы зарезервированы, и чтобы их использовать, нужно добавлять \ перед ними, например, 'Это \- Бот'. По умолчанию эта функция выключена; если хотите её включить, напишите f в начале сообщения."
                 TextWrapping="Wrap" AcceptsReturn="True"
                 />
                </StackPanel>
            </Grid>
            <WrapPanel Grid.Row="1" Name="StepsPanel" Margin="0 10 0 0" ItemWidth="auto" ItemHeight="auto"/>

            <Button Grid.Row="2" Name="CommitChanges" Content="Сохранить изменения" Background="#2b2b2b" Width="200" HorizontalAlignment="Right" Margin="0 10 10 0" Click="CommitChanges_Click"  Padding="3" VerticalAlignment="Bottom"/>
            <Button Grid.Row="2" Name="DeleteCommand" Content="Удалить форму" Background="#2b2b2b" Width="200" HorizontalAlignment="Left" Margin="0 10 10 0" Click="DeleteCommand_Click"  Padding="3" VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</UserControl>
